
@model ClientPortal.Models.QuestionModel

@{
    Html.RenderPartial("_QuestionComponent", Model);
}

@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {

            setQuestionPosition('CountryOfBirth');

            toggleSubmitBtn($('#CountryOfBirth').find(':selected').val() !== '0');

            $('#CountryOfBirth').change(function () {
                toggleSubmitBtn($(this).find(':selected').val() !== '0');
            });

        });

    </script>
}